@using task_for_66bit.Data.Models

<EditForm Model="@FilterCriteria" OnValidSubmit="@HandleFilter">
    <div>
        <label>Direction:</label>
        <InputSelect @bind-Value="FilterCriteria.DirectionId">
            <option value="">All Directions</option>
            @foreach (var direction in Directions)
            {
                <option value="@direction.Id">@direction.Name</option>
            }
        </InputSelect>
    </div>

    <div>
        <label>Project:</label>
        <InputSelect @bind-Value="FilterCriteria.ProjectId">
            <option value="">All Projects</option>
            @foreach (var project in Projects)
            {
                <option value="@project.Id">@project.Name</option>
            }
        </InputSelect>
    </div>

    <button type="submit">Apply Filters</button>
</EditForm>

@code {
    [Parameter]
    public EventCallback<FilterCriteriaClass> OnFilter { get; set; }

    [Parameter]
    public List<Direction> Directions { get; set; } = new List<Direction>();

    [Parameter]
    public List<Project> Projects { get; set; } = new List<Project>();

    private FilterCriteriaClass FilterCriteria = new FilterCriteriaClass();

    private async Task HandleFilter()
    {
        await OnFilter.InvokeAsync(FilterCriteria);
    }

    // Локальный класс FilterCriteria
    public class FilterCriteriaClass
    {
        public int? DirectionId { get; set; }
        public int? ProjectId { get; set; }
    }
}